@model  IEnumerable<CardOneMoney.Models.CustomerViewModel>

@{ 
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customers - View All</title>
</head>
<body>
    <div>
        <br />
        <br />
        <a href="@Url.Action("Create","Customers")" class="btn-primary">Create New User</a>
        <br />
        <br />
        <table class="table">
            <tr>
                <th>
                    Customer Name
                </th>
                <th>
                    Telephone Number
                </th>
                <th>
                    Date Applied
                </th>
                <th>

                </th>
            </tr>
            @foreach(var item in Model)
            {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.TelephoneNumber</td>
                <td>@item.DateApplied.ToShortDateString()</td>
                <td><a href="@Url.Action("Edit","Customers", new { CustomerID = item.CustomerID })">Edit</a> | <a href="@Url.Action("Delete","Customers", new { CustomerID = item.CustomerID })">Delete</a></td>
            </tr>

            }
        </table>
    </div>
</body>
</html>
